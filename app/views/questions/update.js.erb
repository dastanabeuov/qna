<% if  @question.errors.present? %>
  <% @question.errors.full_messages.each do |message| %>
    $('question-errors-' + '<%= @question.id %>').append('<%= j message %><br>')
  <% end %>
<% else %>
  $('question-errors-<%= @question.id %>').html('')
  $(".question-<%= @question.id %>").html('<%= j render @question %>')
<% end %>
